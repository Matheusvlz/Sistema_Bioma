{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window and cadastro-clientes",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:webview:allow-create-webview-window",
    "core:window:allow-set-focus",
    "core:window:allow-close",
    "dialog:default",
    "dialog:allow-save",
    "dialog:allow-open",
    "dialog:allow-message",
    "dialog:allow-confirm",
    "dialog:allow-ask",
    "fs:default",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:allow-create",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        "$TEMP/*",
        "$TEMP/**",
        "$APPDATA/*",
        "$APPDATA/**",
        "$HOME/Downloads/*",
        "$HOME/Downloads/**",
        "$DOWNLOAD/*",
        "$DOWNLOAD/**"
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "open-pdf",
          "cmd": "cmd",
          "args": [
            "/C",
            "start",
            "",
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "open-file",
          "cmd": "explorer",
          "args": [
            {
              "validator": ".*"
            }
          ]
        },
        {
          "name": "open-file-linux",
          "cmd": "xdg-open",
          "args": [
            {
              "validator": ".*"
            }
          ]
        },
        {
          "name": "open-file-macos",
          "cmd": "open",
          "args": [
            {
              "validator": ".*"
            }
          ]
        }
      ]
    }
  ]
}